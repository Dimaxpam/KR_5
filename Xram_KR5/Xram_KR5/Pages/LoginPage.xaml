<Page x:Class="Xram_KR5.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Xram_KR5.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="LoginPage">

    <Grid>
        <StackPanel>
            <Label Content="Логин" HorizontalAlignment="Center"></Label>
            <TextBox Height="20" Width="150" Margin="10"></TextBox>
            <Label Content="Пароль" HorizontalAlignment="Center"></Label>
            <PasswordBox Height="20" Width="150" ></PasswordBox>
            <Button Height="20" Width="120" Content="Войти" Background="#FF498C51" Margin="10"></Button>
        </StackPanel>
    </Grid>
</Page>
