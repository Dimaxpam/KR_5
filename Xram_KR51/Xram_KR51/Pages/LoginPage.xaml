<Page x:Class="Xram_KR51.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Xram_KR51.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="LoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Логин" HorizontalAlignment="Center"  FontFamily="Comic Sans MS"></Label>
            <TextBox Height="20" Width="150"  FontFamily="Comic Sans MS" ></TextBox>
            <Label Content="Пароль" HorizontalAlignment="Center"  FontFamily="Comic Sans MS"></Label>
            <PasswordBox Height="20" Width="150"  FontFamily="Comic Sans MS"></PasswordBox>
            <Button Height="20" Width="120" Content="Войти" Background="#FF498C51" Margin="10"  FontFamily="Comic Sans MS" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Page>